<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tableRow"
    android:padding="@dimen/widget_margin"
    android:id="@+id/widget">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TdDarkGreen"
        android:id="@+id/widget_header">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/widget_shield"
            android:id="@+id/td_logo"/>
        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/td_logo"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="Money Education"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_header"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:id="@+id/column_one">
        <TextView
            android:id="@+id/label_budgeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TdDarkGreen"
            android:textStyle="bold"
            android:text="Budgeted"/>
        <TextView
            android:id="@+id/budgeted"
            android:layout_below="@id/label_budgeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#232323"/>
        <TextView
            android:id="@+id/label_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/TdDarkGreen"
            android:textStyle="bold"
            android:text="Spent"/>
        <TextView
            android:id="@+id/spent"
            android:layout_below="@id/label_budgeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#232323"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_header"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/column_one"
        android:orientation="vertical">
        <TextView
            android:id="@+id/label_savings_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TdDarkGreen"
            android:textStyle="bold"
            android:text="Savings Goal"/>
        <TextView
            android:id="@+id/savings_goal"
            android:layout_below="@id/label_budgeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#232323"/>
        <TextView
            android:id="@+id/label_actual_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/TdDarkGreen"
            android:textStyle="bold"
            android:text="Actual Savings"/>
        <TextView
            android:id="@+id/actual_savings"
            android:layout_below="@id/label_budgeted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#232323"/>
    </LinearLayout>

</RelativeLayout>
